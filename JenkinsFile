pipeline {
    agent any

    tools {
        // make sure .NET SDK is installed on Jenkins
        dotnet 'dotnet-sdk'
    }

    stages {
        stage('Restore') {
            steps {
                sh 'dotnet restore'
            }
        }
        stage('Build') {
            steps {
                sh 'dotnet build --configuration Release'
            }
        }
        stage('Test') {
            steps {
                sh 'dotnet test'
            }
        }
        stage('Publish') {
            steps {
                sh 'dotnet publish -c Release -o out'
            }
        }
    }
}
